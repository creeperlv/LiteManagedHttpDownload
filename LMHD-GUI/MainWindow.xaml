<Window x:Class="LMHD_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LMHD_GUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid VerticalAlignment="Top" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox Name="UrlBox"></TextBox>
            <Button Content=" Download" Grid.Column="1" Click="Button_Click"/>
        </Grid>
        <ProgressBar HorizontalAlignment="Center" VerticalAlignment="Center" MinHeight="20" Width="200" Name="Indicator" Maximum="1"/>
    </Grid>
</Window>
